{
  "name": "Pico SDK Dev",
  "image": "elehobica/pico-sdk-dev-docker:sdk-2.1.0-1.0.0",
  "mounts": [
    {
      "source": "${localWorkspaceFolder}/pico-spdif",
      "target": "/home/rp2dev/pico/${localWorkspaceFolderBasename}",
      "type": "bind"
    }
  ],
  "workspaceFolder": "/home/rp2dev/pico/${localWorkspaceFolderBasename}",
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-vscode.cpptools",
        "ms-vscode.cmake-tools",
        "twxs.cmake"
      ],
      "settings": {
        "terminal.integrated.shell.linux": "/bin/bash"
      }
    }
  }
}
